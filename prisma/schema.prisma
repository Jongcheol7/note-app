generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  sessions      Session[]
  categories    Category[]
  accounts      Account[]
  notes         Note[]

  @@map("user")
}

// ✅ 소셜 계정 정보 테이블 (OAuth 로그인한 경우 이 테이블에 저장됨)
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  // 관계 설정
  user User @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
  @@map("account")
}

// ✅ 세션 테이블 (로그인 유지용)
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  // 관계 설정
  user User @relation(fields: [userId], references: [id])
  @@map("session")
}

model Category {
  categoryNo      Int       @id @default(autoincrement())
  name            String  
  userId          String
  sortOrder       Int       @default(0)
  inputDatetime   DateTime  @default(now())

  user            User      @relation(fields: [userId], references: [id])
  notes           Note[]

  @@map("category")
}

model Note {
  noteNo        Int       @id @default(autoincrement())
  userId        String
  title         String
  content       String
  plainText     String
  thumnail      String?
  categoryNo    Int?
  sortOrder     Int       @default(0)
  color         String?
  inputDatetime DateTime  @default(now())
  modDatetime   DateTime?
  delDatetime   DateTime?

  user          User      @relation(fields:[userId], references:[id])
  category      Category? @relation(fields:[categoryNo],references:[categoryNo])

  @@map("note")
}
