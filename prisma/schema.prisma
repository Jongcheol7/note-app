generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  sessions      Session[]
  categories    Category[]
  accounts      Account[]
  notes         Note[]
  likes         Like[]

  settings      UserSettings?
  @@map("user")
}

// ✅ 소셜 계정 정보 테이블 (OAuth 로그인한 경우 이 테이블에 저장됨)
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  // 관계 설정
  user User @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
  @@map("account")
}

// ✅ 세션 테이블 (로그인 유지용)
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  // 관계 설정
  user User @relation(fields: [userId], references: [id])
  @@map("session")
}

model Category {
  categoryNo      Int       @id @default(autoincrement())
  name            String  
  userId          String
  sortOrder       Int       @default(0)
  inputDatetime   DateTime  @default(now())

  user            User      @relation(fields: [userId], references: [id])
  notes           Note[]

  @@map("category")
}

model Tags {
  tagNo   Int     @id @default(autoincrement())
  name    String
  noteNo  Int 
  inputDatetime DateTime @default(now())
  
  note    Note?   @relation(fields:[noteNo], references:[noteNo], onDelete: Cascade)
  @@map("tags")
  @@unique([name, noteNo])
}

model Like {
  likeNo  Int     @id @default(autoincrement())
  userId  String  
  noteNo  Int     
  inputDatetime DateTime @default(now())

  user    User    @relation(fields:[userId], references:[id])
  note    Note?   @relation(fields:[noteNo], references:[noteNo], onDelete: Cascade)

  @@unique([userId, noteNo])
  @@map("like")
}

model UserSettings {
  userId        String    @id
  secretNotePw  String?
  inputDatetime DateTime  @default(now())
  modDatetime   DateTime?

  user  User  @relation(fields:[userId], references:[id])
}

model Note {
  noteNo        Int       @id @default(autoincrement())
  userId        String
  title         String
  content       String
  plainText     String
  categoryNo    Int?
  sortOrder     Int       @default(0)
  color         String?
  isPublic      Boolean   @default(false)
  isSecret      Boolean   @default(false)
  alarmDatetime DateTime?
  inputDatetime DateTime  @default(now())
  modDatetime   DateTime?
  delDatetime   DateTime?
  isPinned      Boolean   @default(false)
  pinDatetime   DateTime?

  tags    Tags[]
  likes   Like[]

  user          User      @relation(fields:[userId], references:[id])
  category      Category? @relation(fields:[categoryNo],references:[categoryNo])
  
  @@map("note")
}
