generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id
  password        String?
  name            String
  email           String
  picture         String?

  sessions        Session[]
  categories      Category[]
  notes           Note[]
}

model Session {
  id              String    @id
  userId          String
  expiresAt       Int

  user            User      @relation(fields: [userId], references: [id])
}

model Category {
  categoryNo      Int       @id @default(autoincrement())
  name            String  
  userId          String
  sortOrder       Int       @default(0)
  inputDatetime   DateTime  @default(now())

  user            User      @relation(fields: [userId], references: [id])
  notes           Note[]
}

model Note {
  noteNo        Int       @id @default(autoincrement())
  userId        String
  title         String
  content       String
  thumnail      String?
  categoryNo    Int?
  sortOrder     Int       @default(0)
  inputDatetime DateTime  @default(now())
  modDatetime   DateTime?
  delDatetime   DateTime?

  user          User      @relation(fields:[userId], references:[id])
  category      Category? @relation(fields:[categoryNo],references:[categoryNo])
}
